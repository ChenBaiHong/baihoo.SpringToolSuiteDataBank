<script>
    //获取默认的样式div
    var $cropImg = document.querySelector('#cropImg');
    //默认的样式div节点span
    var cropSpanNote = $cropImg.querySelector('span');
   //默认的样式div节点Img
    var cropImgNote = $cropImg.querySelector('img');
    
  //第三方提供裁剪图片的对象
    var cropper = new Cropper({
        el: '#crop', // 替换默认的样式的div
        cp: '#cropImg', //获取默认的样式div
        callback: function (dataURL, dataBlob) {//回调函数
        	cropSpanNote.style.display = 'none'; // 默认的样式div节点span，隐藏
        	cropImgNote.style.display = 'block';  // 默认的样式div节点Img，显示
        	cropImgNote.src = dataURL;
        }
    });
    
    
</script>
 